<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Cinematch" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:statusBarColor">@color/neutral</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ButtonTransparent" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">@color/primary_variant</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonOutline" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_outline</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">@color/on_neutral</item>
        <item name="android:textColorHint">@color/on_neutral</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/alert_dialog</item>
        <item name="android:textColor">@color/on_neutral</item>
        <item name="android:textColorPrimary">@color/on_neutral</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_semi_bold</item>
    </style>

    <style name="RoundedPoster">
        <item name="cornerSize">4%</item>
    </style>

    <style name="RoundedCast">
        <item name="cornerSize">10%</item>
    </style>

    <style name="Theme.Cinematch" parent="Base.Theme.Cinematch" />
</resources>