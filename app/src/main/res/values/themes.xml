<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Cinematch" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@color/neutral</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">@color/on_neutral</item>
        <item name="android:textColorHint">@color/on_neutral</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="Theme.Cinematch" parent="Base.Theme.Cinematch" />
</resources>