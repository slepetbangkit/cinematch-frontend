<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/neutral"
    tools:context=".view.home.HomeFragment">

    <View
        android:id="@+id/recommended_movies_tv"
        android:layout_width="230dp"
        android:layout_height="20dp"
        android:background="@drawable/shape_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/recommended_1"
        android:layout_width="238dp"
        android:layout_height="348dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/poster_empty_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recommended_movies_tv" />


    <View
        android:id="@+id/recommended_2"
        android:layout_width="238dp"
        android:layout_height="348dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/poster_empty_placeholder"
        app:layout_constraintStart_toEndOf="@id/recommended_1"
        app:layout_constraintTop_toBottomOf="@id/recommended_movies_tv" />

    <View
        android:id="@+id/divider_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/neutral_variant"
        app:layout_constraintTop_toBottomOf="@id/recommended_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/friends_likes_tv"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/shape_card"
        app:layout_constraintTop_toBottomOf="@id/divider_1"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/friends_likes_1"
        android:layout_width="105dp"
        android:layout_height="155dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/poster_empty_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/friends_likes_tv" />

    <View
        android:id="@+id/friends_likes_2"
        android:layout_width="105dp"
        android:layout_height="155dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/poster_empty_placeholder"
        app:layout_constraintStart_toEndOf="@id/friends_likes_1"
        app:layout_constraintTop_toBottomOf="@id/friends_likes_tv" />

    <View
        android:id="@+id/friends_likes_3"
        android:layout_width="105dp"
        android:layout_height="155dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/poster_empty_placeholder"
        app:layout_constraintStart_toEndOf="@id/friends_likes_2"
        app:layout_constraintTop_toBottomOf="@id/friends_likes_tv" />

    <View
        android:id="@+id/divider_2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/neutral_variant"
        app:layout_constraintTop_toBottomOf="@id/friends_likes_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/their_verdict_tv"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/shape_card"
        app:layout_constraintTop_toBottomOf="@id/divider_2"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/their_verdict_1"
        android:layout_width="338dp"
        android:layout_height="227dp"
        android:layout_marginTop="16dp"
        android:background="@color/neutral_variant"
        app:shapeAppearanceOverlay="@style/RoundedCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/their_verdict_tv" />

    <View
        android:id="@+id/divider_3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:background="@color/neutral_variant"
        app:layout_constraintTop_toBottomOf="@id/their_verdict_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/top_rated_movies_tv"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/shape_card"
        app:layout_constraintTop_toBottomOf="@id/divider_3"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/top_rated_movies_1"
        android:layout_width="105dp"
        android:layout_height="155dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/poster_empty_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_rated_movies_tv" />

    <View
        android:id="@+id/top_rated_movies_2"
        android:layout_width="105dp"
        android:layout_height="155dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/poster_empty_placeholder"
        app:layout_constraintStart_toEndOf="@id/top_rated_movies_1"
        app:layout_constraintTop_toBottomOf="@id/top_rated_movies_tv" />

    <View
        android:id="@+id/top_rated_movies_3"
        android:layout_width="105dp"
        android:layout_height="155dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/poster_empty_placeholder"
        app:layout_constraintStart_toEndOf="@id/top_rated_movies_2"
        app:layout_constraintTop_toBottomOf="@id/top_rated_movies_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>
