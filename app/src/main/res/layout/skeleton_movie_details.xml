<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingHorizontal="16dp">

    <LinearLayout
        android:id="@+id/movie_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/movie_poster_iv"
            android:layout_width="105dp"
            android:layout_height="155dp"
            android:scaleType="centerCrop"
            android:background="@drawable/shape_card" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <View
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:background="@drawable/shape_card" />

            <View
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_card" />

            <View
                android:layout_width="60dp"
                android:layout_height="17dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_card" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_card" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/neutral_variant" />

    <View
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_card" />

    <View
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_card" />

    <View
        android:id="@+id/trailer_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/neutral_variant" />

    <View
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_card" />

    <FrameLayout
        android:id="@+id/trailer_frame"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="16dp">

        <View
            android:id="@+id/trailer_ib"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:background="@drawable/shape_card" />
    </FrameLayout>

    <View
        android:id="@+id/cast_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/neutral_variant" />

    <View
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_card" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_card" />

        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_card" />

        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/shape_card" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <View
            android:layout_width="120dp"
            android:layout_height="10dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_card" />

        <View
            android:layout_width="120dp"
            android:layout_height="10dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_card" />

        <View
            android:layout_width="120dp"
            android:layout_height="10dp"
            android:background="@drawable/shape_card" />
    </LinearLayout>

    <View
        android:id="@+id/crew_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/neutral_variant" />

    <View
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_card" />
</LinearLayout>