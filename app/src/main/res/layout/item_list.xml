<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/neutral_variant"
    android:layout_gravity="center"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="90dp"
            android:layout_height="135dp"
            android:src="@drawable/movie_list_placeholder"
            android:alpha="0.2"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedPoster" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/plus_jakarta_sans_semi_bold"
                android:textColor="@color/on_neutral"
                android:textSize="20sp"
                tools:text="List Name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/on_neutral"
                android:textSize="13sp"
                tools:text="36 movies"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/plus_jakarta_sans_regular"
                android:textColor="@color/on_neutral"
                android:alpha="0.7"
                android:textSize="11sp"
                tools:text="List description"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>